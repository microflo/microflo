{
    "name": "microflo",
    "version": "0.2.1",
    "description": "Flow-based programming runtime for microcontrollers",
    "keywords": ["fbp", "noflo", "dataflow", "microcontroller",
        "physical computing", "Arduino", "embedded systems", "atmel avr"],
    "author": "Jon Nordby <jononor@gmail.com> (http://www.jonnor.com)",
    "repository" : { "type" : "git", "url" : "http://github.com/jonnor/microflo.git"},
    "bugs": "http://github.com/jonnor/microflo/issues",
    "homepage": "http://microflo.org",
    "license": "MIT",
    "main": "./lib/microflo",
    "bin": {
      "microflo": "./microflo.js"
    },
    "scripts":{
        "start": "node microflo.js runtime",
        "preinstall": "node microflo.js update-defs && node-gyp rebuild",
        "test": "mocha --reporter spec"
    },
    "engines": {
      "node": ">=0.10.0"
    },
    "dependencies": {
        "noflo": "~0.4.0",
        "fbp": "~1.0.2",
        "websocket": "~1.0.8",
        "serialport": "~1.1.3",
        "commander": "~2.1.0",
        "pkginfo": "~0.3.0"
    },
    "devDependencies": {
        "mocha": "~1.13.0"
    },
    "noflo": {
      "components": {
            "MicroFloComponent": "nodejs/MicroFloComponent"
      }
    }
}
